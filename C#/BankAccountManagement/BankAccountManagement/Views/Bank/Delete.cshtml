@model BankAccountManagement.Models.Transaction

@{
    ViewBag.Title = "Delete Transaction";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Account Number")
        </dt>

        <dd>
            @Html.ActionLink(Model.AccountNumber.ToString(), Model.AccountNumber.ToString(), "Bank/DetailsAccount")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            @Html.DisplayName("Other Party")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OtherParty)
        </dd>

        <dt>
            @Html.DisplayName("Other Party's Account Number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OtherPartyAccount)
        </dd>

        <dt>
            @Html.DisplayName("Other Party's Routing Number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OtherPartyRoutingNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Transaction List", "Index")
        </div>
    }
</div>
